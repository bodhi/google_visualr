begin
  require 'jeweler'
  Jeweler::Tasks.new do |gem|
    gem.name = "google_visualr"
    gem.summary = %Q{A Ruby Library for the Google Visualization API}
    gem.description = %Q{Write Ruby code. Generate Javascript. Display a Google Visualization.}
#    gem.email = ""
    gem.homepage = "http://github.com/winston/google_visualr"
    gem.author = "Winston Teo"
    gem.files = ["CHANGELOG", "MIT-LICENSE", "Rakefile", "Gemfile", "README.rdoc", "VERSION", "init.rb", "lib/**/*"]
    # gem is a Gem::Specification... see http://www.rubygems.org/read/chapter/20 for additional settings
  end
  Jeweler::GemcutterTasks.new
rescue LoadError
  puts "Jeweler (or a dependency) not available. Install it with: gem install jeweler"
end
